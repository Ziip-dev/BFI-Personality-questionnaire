    <form method="post">
      {{ form.hidden_tag() }}

      {% for subfield in form.answer %}
      {{ subfield }} {{ subfield.label }} <br>
      {% endfor %}
  </div>
  <br>
  <div>
    {{ form.submit }}
  </div>
  </form>
</div>

